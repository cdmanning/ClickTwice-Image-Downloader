{
  "manifest_version": 3,
  "name": "ClickTwice - Image Downloader",
  "short_name": "ClickTwice",
  "description": "Download images faster just by clicking.",
  "version": "1.0.1",
  "author": "Starswept Development",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "/popup/popup.html",
    "default_title": "ClickTwice - Image Downloader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "offline_enabled": true
}